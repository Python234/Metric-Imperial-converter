- var choices = ['Celcius to Fahrenheit', 'Fahrenheit to Celcius', 'Kilometers to Miles', 'Miles to Kilometers', 'Kilometers to Feet', 'Meters to Feet', 'Feet to Meters', 'Centimeters to Inches', 'Inches to Centimeters', 'Millimeters to Inches', 'Inches to Millimeters', 'Liters to Quarts', 'Quarts to Liters', 'Liters to Gallons', 'Gallons to Liters', 'Milliliters to Cups', 'Cups to Milliliters', 'Milliliters to Ounces', 'Ounces to Milliliters', 'Kilograms to Tons', 'Tons to Kilograms', 'Kilograms to Pounds', 'Pounds to Kilograms', 'Grams to Ounces', 'Ounces to Grams', 'Grams to Pounds', 'Pounds to Grams', 'Milligrams to Ounces']

html
  head
    title Metric Imperial Converter
    meta(name:='description', content='A cool metric converter')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/style.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous")
  body
    header
      h1#title Metric Imperial Converter
    main
      section
        form(action='/convert/' + (path || 'meters-to-kilometers'), method='get')
          select
            each val in choices
              if val === initial
                option(selected)= val
              else
                option= val
          div#base
            label(for='base')#label-base #{base_label_text}
            input(type='number', name='base', min='0', value=(base || ''), step='0.01')#base-input
          div#arrow
            span
              i.fa.fa-arrow-right
          div#result
            label(for='result')#label-result #{result_label_text}
            input(type='number', name='result', min='0', value=(result || ''), disabled)#result-input
          section#button
            input(type='submit', value="Convert")
            
    script(src='https://code.jquery.com/jquery-2.2.1.min.js', integrity='sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00=', crossorigin='anonymous')
    script(src='/public/client.js')